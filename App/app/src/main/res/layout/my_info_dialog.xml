<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="300dp"
    android:id="@+id/special_dialog"
    android:background="@drawable/bg1">
    <ImageView
        android:tint="#fff"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:id="@+id/close"/>
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:text="Tên của bạn"
            android:id="@+id/my_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/my_profile_name"
            android:textColor="#fff"
            android:text="Email của bạn"
            android:id="@+id/my_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/my_profile_email"
            android:textColor="#fff"
            android:text="0123456789"
            android:id="@+id/my_profile_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/my_profile_sdt"
            android:textColor="#fff"
            android:text="01/01/1970"
            android:id="@+id/my_profile_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/my_profile_dob"
            android:textColor="#fff"
            android:text="Giới tính: Nam"
            android:id="@+id/my_profile_gt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>