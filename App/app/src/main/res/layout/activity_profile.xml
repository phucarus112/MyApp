<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.ProfileActivity"
    android:background="#fff">
    <TextView
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mywall_none"
        android:text="Chưa có nội dung"/>
    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/ddd"
        android:padding="8dp"
        android:background="@drawable/bg1"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/mywall_back"
            android:background="@null"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/back_state"/>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="7.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_toRightOf="@+id/mywall_back"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="Trang của bạn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_below="@+id/ddd"
        android:src="@drawable/bg1"
        android:id="@+id/mywall_anhbia"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/mywall_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:fontFamily="sans-serif-condensed-medium"
        android:id="@+id/mywall_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mywall_avatar"
        android:text="Tên"
        android:textColor="#fff"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="85dp"
        android:textSize="23dp"
        android:textStyle="bold"/>
    <ListView
        android:divider="#fff"
        android:background="#fff"
        android:layout_below="@id/mywall_avatar"
        android:layout_marginBottom="10dp"
        android:dividerHeight="10.0sp"
        android:layout_marginTop="25dp"
        android:id="@+id/mywall_lv"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>
</RelativeLayout>