<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#c9c9c9"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="5dp"
                android:id="@+id/chat_avt_receive"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:minWidth="50dp"
                android:padding="5dp"
                android:id="@+id/chat_content_receive"
                android:textColor="#fff"
                android:text="Nội dung. Chào bạn, How are you??? Tạm biệt nha. Khon a bc f fjffh fhfdhjffh"
                android:textSize="16dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:background="#FF00B8D4"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/chat_time_receive"
                android:layout_marginTop="5dp"
                android:textSize="11dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>