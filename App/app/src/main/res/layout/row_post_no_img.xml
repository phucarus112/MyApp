<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_avt_no_img"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:layout_weight="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/post_ten_no_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nickname"/>
            <TextView
                android:textStyle="italic"
                android:textColor="#c9c9c9"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/post_time_no_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:30 01/01/1970"/>
        </LinearLayout>
        <ImageView
            android:layout_marginTop="-10dp"
            android:background="@null"
            android:id="@+id/post_option_no_img"
            android:padding="5dp"
            android:src="@drawable/vector_option"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/post_caption_no_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption caption caption caption caption caption caption caption"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/post_tym_no_img"
            android:src="@drawable/heat"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:id="@+id/post_comment_no_img"
            android:src="@drawable/comment"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:id="@+id/post_tv_comment_no_img"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="17dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/post_share_no_img"
            android:src="@drawable/share"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/post_tv_share_no_img"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="17dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:text="100 luot thich"
            android:id="@+id/post_tv_tym_no_img"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="17dp"/>
    </LinearLayout>
</LinearLayout>