<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="5dp"
    android:background="@drawable/black_orange">
    <ImageView
        android:layout_marginRight="8dp"
        android:layout_gravity="right"
        android:id="@+id/row_playist_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vector_option"
        android:backgroundTint="#fff"/>
    <ImageView
        android:src="@drawable/youtube"
        android:id="@+id/row_playist_img"
        android:layout_margin="10dp"
        android:layout_width="130dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_marginBottom="20dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:maxWidth="150dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/row_playist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên của Playist"
        android:textSize="18dp"
        android:textStyle="bold" />
</LinearLayout>